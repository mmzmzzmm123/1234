<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baoli.sysmanage.mapper.BaoliBizCarSeriesMapper">
    
    <resultMap type="BaoliBizCarSeries" id="BaoliBizCarSeriesResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="brandId"    column="brand_id"    />
        <result property="level2BrandId"    column="level2_brand_id"    />
        <result property="brandName"    column="brand_name"    />
        <result property="level2BrandName"    column="level2_brand_name"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="status"    column="status"    />
        <result property="indexId"    column="index_id"    />
    </resultMap>

    <sql id="selectBaoliBizCarSeriesVo">
        select id, name, brand_id, level2_brand_id,(select b.name from baoli_biz_car_brand b where b.id = a.brand_id) brand_name,(select b.name from baoli_biz_car_brand b where b.id = a.level2_brand_id) level2_brand_name, create_time, update_time, create_by, update_by, status, index_id from baoli_biz_car_series a
    </sql>

    <select id="selectBaoliBizCarSeriesList" parameterType="BaoliBizCarSeries" resultMap="BaoliBizCarSeriesResult">
        <include refid="selectBaoliBizCarSeriesVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="brands != null  and brands != ''"> or brand_id in
                <foreach collection="brands" index="index" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>

            <if test="level2Brands != null  and level2Brands != ''"> or level2_brand_id in
                <foreach collection="level2Brands" index="i" item="item" open="(" separator="," close=")">
                    <foreach collection="item" index="j" separator="," item="item2">
                        <if test="j==1">
                        #{item2}
                        </if>
                    </foreach>
                </foreach>
            </if>
        </where>
        order by brand_id,level2_brand_id
    </select>
    
    <select id="selectBaoliBizCarSeriesById" parameterType="Long" resultMap="BaoliBizCarSeriesResult">
        <include refid="selectBaoliBizCarSeriesVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBaoliBizCarSeries" parameterType="BaoliBizCarSeries" useGeneratedKeys="true" keyProperty="id">
        insert into baoli_biz_car_series
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="brandId != null">brand_id,</if>
            <if test="level2BrandId != null">level2_brand_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="status != null">status,</if>
            <if test="indexId != null">index_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="brandId != null">#{brandId},</if>
            <if test="level2BrandId != null">#{level2BrandId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="status != null">#{status},</if>
            <if test="indexId != null">#{indexId},</if>
         </trim>
    </insert>

    <update id="updateBaoliBizCarSeries" parameterType="BaoliBizCarSeries">
        update baoli_biz_car_series
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="brandId != null">brand_id = #{brandId},</if>
            <if test="level2BrandId != null">level2_brand_id = #{level2BrandId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="status != null">status = #{status},</if>
            <if test="indexId != null">index_id = #{indexId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBaoliBizCarSeriesById" parameterType="Long">
        delete from baoli_biz_car_series where id = #{id}
    </delete>

    <delete id="deleteBaoliBizCarSeriesByIds" parameterType="String">
        delete from baoli_biz_car_series where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>