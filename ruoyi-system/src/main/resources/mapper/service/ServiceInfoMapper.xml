<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.service.mapper.ServiceInfoMapper">

    <resultMap type="ServiceInfo" id="ServiceInfoResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="shortName"    column="short_name"    />
        <result property="sortNum"    column="sort_num"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <resultMap id="ServiceInfoServiceItemResult" type="ServiceInfo" extends="ServiceInfoResult">
        <collection property="serviceItemList" notNullColumn="sub_id" javaType="java.util.List" resultMap="ServiceItemResult" />
    </resultMap>

    <resultMap id="selectJoinAllResult" type="ServiceInfo" extends="ServiceInfoResult">
        <collection property="serviceItemList" column="id" javaType="java.util.List" select="com.ruoyi.service.mapper.ServiceItemMapper.selectJoinPriceByServiceId" />
    </resultMap>

    <resultMap type="ServiceItem" id="ServiceItemResult">
        <result property="id"    column="sub_id"    />
        <result property="serviceId"    column="sub_service_id"    />
        <result property="name"    column="sub_name"    />
        <result property="ifBuyoutItem"    column="sub_if_buyout_item"    />
        <result property="orderExpireTimeUnit"    column="sub_order_expire_time_unit"    />
        <result property="orderServiceDuration"    column="sub_order_service_duration"    />
        <result property="sortNum"    column="sub_sort_num"    />
        <result property="createBy"    column="sub_create_by"    />
        <result property="createTime"    column="sub_create_time"    />
        <result property="updateBy"    column="sub_update_by"    />
        <result property="updateTime"    column="sub_update_time"    />
    </resultMap>

    <sql id="selectServiceInfoVo">
        select id, name, short_name, sort_num, remark, create_by, create_time, update_by, update_time from bus_service_info
    </sql>

    <select id="selectServiceInfoList" parameterType="ServiceInfo" resultMap="ServiceInfoResult">
        <include refid="selectServiceInfoVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="shortName != null  and shortName != ''"> and short_name like concat('%', #{shortName}, '%')</if>
        </where>
    </select>

    <select id="selectJoinAll" parameterType="ServiceInfo" resultMap="selectJoinAllResult">
        <include refid="selectServiceInfoVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="shortName != null  and shortName != ''"> and short_name like concat('%', #{shortName}, '%')</if>
        </where>
        order by sort_num desc
    </select>

    <select id="selectServiceInfoById" parameterType="Long" resultMap="ServiceInfoServiceItemResult">
        select a.id, a.name, a.short_name, a.sort_num, a.remark, a.create_by, a.create_time, a.update_by, a.update_time,
 b.id as sub_id, b.service_id as sub_service_id, b.name as sub_name, b.if_buyout_item as sub_if_buyout_item, b.order_expire_time_unit as sub_order_expire_time_unit, b.order_service_duration as sub_order_service_duration, b.sort_num as sub_sort_num, b.create_by as sub_create_by, b.create_time as sub_create_time, b.update_by as sub_update_by, b.update_time as sub_update_time
        from bus_service_info a
        left join bus_service_item b on b.service_id = a.id
        where a.id = #{id}
    </select>

    <insert id="insertServiceInfo" parameterType="ServiceInfo" useGeneratedKeys="true" keyProperty="id">
        insert into bus_service_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="shortName != null">short_name,</if>
            <if test="sortNum != null">sort_num,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="shortName != null">#{shortName},</if>
            <if test="sortNum != null">#{sortNum},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateServiceInfo" parameterType="ServiceInfo">
        update bus_service_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="shortName != null">short_name = #{shortName},</if>
            <if test="sortNum != null">sort_num = #{sortNum},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteServiceInfoById" parameterType="Long">
        delete from bus_service_info where id = #{id}
    </delete>

    <delete id="deleteServiceInfoByIds" parameterType="String">
        delete from bus_service_info where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteServiceItemByServiceIds" parameterType="String">
        delete from bus_service_item where service_id in
        <foreach item="serviceId" collection="array" open="(" separator="," close=")">
            #{serviceId}
        </foreach>
    </delete>

    <delete id="deleteServiceItemByServiceId" parameterType="Long">
        delete from bus_service_item where service_id = #{serviceId}
    </delete>

    <insert id="batchServiceItem">
        insert into bus_service_item( id, service_id, name, if_buyout_item, order_expire_time_unit, order_service_duration, sort_num, create_by, create_time, update_by, update_time) values
		<foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.serviceId}, #{item.name}, #{item.ifBuyoutItem}, #{item.orderExpireTimeUnit}, #{item.orderServiceDuration}, #{item.sortNum}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime})
        </foreach>
    </insert>
</mapper>
