<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.stu.mapper.StuMaterialMapper">
    
    <resultMap type="StuMaterial" id="StuMaterialResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="flag"    column="flag"    />
        <result property="url"    column="url"    />
    </resultMap>

    <sql id="selectStuMaterialVo">
        select id, name, flag, url from stu_material
    </sql>

    <select id="selectStuMaterialList" parameterType="StuMaterial" resultMap="StuMaterialResult">
        <include refid="selectStuMaterialVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="flag != null "> and flag = #{flag}</if>
            <if test="url != null  and url != ''"> and url = #{url}</if>
        </where>
    </select>
    
    <select id="selectStuMaterialById" parameterType="Long" resultMap="StuMaterialResult">
        <include refid="selectStuMaterialVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertStuMaterial" parameterType="StuMaterial" useGeneratedKeys="true" keyProperty="id">
        insert into stu_material
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="flag != null">flag,</if>
            <if test="url != null">url,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="flag != null">#{flag},</if>
            <if test="url != null">#{url},</if>
         </trim>
    </insert>

    <update id="updateStuMaterial" parameterType="StuMaterial">
        update stu_material
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="flag != null">flag = #{flag},</if>
            <if test="url != null">url = #{url},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteStuMaterialById" parameterType="Long">
        delete from stu_material where id = #{id}
    </delete>

    <delete id="deleteStuMaterialByIds" parameterType="String">
        delete from stu_material where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectAllMaterial" resultMap="StuMaterialResult">
        <include refid="selectStuMaterialVo"/>
        where id >= 5
    </select>
</mapper>