<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.office.mapper.TWxUserAmountMapper">
    
    <resultMap type="TWxUserAmount" id="TWxUserAmountResult">
        <result property="id"    column="id"    />
        <result property="wxUserId"    column="wx_user_id"    />
        <result property="userId"    column="user_id"    />
        <result property="amount"    column="amount"    />
        <result property="point"    column="point"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectTWxUserAmountVo">
        select id, wx_user_id, user_id, amount, point, status, remark, create_by, create_time, update_by, update_time from t_wx_user_amount
    </sql>

    <select id="selectTWxUserAmountList" parameterType="TWxUserAmount" resultMap="TWxUserAmountResult">
        <include refid="selectTWxUserAmountVo"/>
        <where>  
            <if test="wxUserId != null "> and wx_user_id = #{wxUserId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="amount != null "> and amount = #{amount}</if>
            <if test="point != null "> and point = #{point}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectTWxUserAmountById" parameterType="Long" resultMap="TWxUserAmountResult">
        <include refid="selectTWxUserAmountVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTWxUserAmount" parameterType="TWxUserAmount">
        insert into t_wx_user_amount
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="wxUserId != null">wx_user_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="amount != null">amount,</if>
            <if test="point != null">point,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="wxUserId != null">#{wxUserId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="amount != null">#{amount},</if>
            <if test="point != null">#{point},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateTWxUserAmount" parameterType="TWxUserAmount">
        update t_wx_user_amount
        <trim prefix="SET" suffixOverrides=",">
            <if test="wxUserId != null">wx_user_id = #{wxUserId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="point != null">point = #{point},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>
    <update id="minusCardValue" parameterType="TWxUserAmount">
        update t_wx_user_amount set amount = amount - #{amount} where wx_user_id = #{wxUserId} and user_id = #{userId}
    </update>

    <delete id="deleteTWxUserAmountById" parameterType="Long">
        delete from t_wx_user_amount where id = #{id}
    </delete>

    <delete id="deleteTWxUserAmountByIds" parameterType="String">
        delete from t_wx_user_amount where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>