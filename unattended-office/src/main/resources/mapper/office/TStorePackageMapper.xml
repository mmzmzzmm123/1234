<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.office.mapper.TStorePackageMapper">
    
    <resultMap type="TStorePackage" id="TStorePackageResult">
        <result property="id"    column="id"    />
        <result property="packageName"    column="package_name"    />
        <result property="payAmount"    column="pay_amount"    />
        <result property="giftAmont"    column="gift_amont"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="storeId"    column="store_id"    />
    </resultMap>

    <sql id="selectTStorePackageVo">
        select id, package_name, pay_amount, gift_amont, store_id, status, remark, create_by, create_time, update_by, update_time from t_store_package
    </sql>

    <select id="selectTStorePackageList" parameterType="TStorePackage" resultMap="TStorePackageResult">
        <include refid="selectTStorePackageVo"/>
        <where>  
            <if test="packageName != null  and packageName != ''"> and package_name like concat('%', #{packageName}, '%')</if>
            <if test="payAmount != null "> and pay_amount = #{payAmount}</if>
            <if test="giftAmont != null "> and gift_amont = #{giftAmont}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
            <if test="storeId != null "> and store_id = #{storeId}</if>
        </where>
    </select>
    
    <select id="selectTStorePackageById" parameterType="Long" resultMap="TStorePackageResult">
        <include refid="selectTStorePackageVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTStorePackage" parameterType="TStorePackage" useGeneratedKeys="true" keyProperty="id">
        insert into t_store_package
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="packageName != null">package_name,</if>
            <if test="payAmount != null">pay_amount,</if>
            <if test="giftAmont != null">gift_amont,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="storeId != null">store_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="packageName != null">#{packageName},</if>
            <if test="payAmount != null">#{payAmount},</if>
            <if test="giftAmont != null">#{giftAmont},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="storeId != null">#{storeId},</if>
         </trim>
    </insert>

    <update id="updateTStorePackage" parameterType="TStorePackage">
        update t_store_package
        <trim prefix="SET" suffixOverrides=",">
            <if test="packageName != null">package_name = #{packageName},</if>
            <if test="payAmount != null">pay_amount = #{payAmount},</if>
            <if test="giftAmont != null">gift_amont = #{giftAmont},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="storeId != null">store_id = #{storeId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTStorePackageById" parameterType="Long">
        delete from t_store_package where id = #{id}
    </delete>

    <delete id="deleteTStorePackageByIds" parameterType="String">
        delete from t_store_package where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>