<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.gauge.mapper.PsyGaugeQuestionsOptionsMapper">
    
    <resultMap type="com.ruoyi.gauge.domain.PsyGaugeQuestionsOptions" id="PsyGaugeQuestionsOptionsResult">
        <result property="id"    column="id"    />
        <result property="gaugeQuestionsId"    column="gauge_questions_id"    />
        <result property="name"    column="name"    />
        <result property="value"    column="value"    />
        <result property="imgUrl"    column="img_url"    />
        <result property="type"    column="type"    />
        <result property="sort"    column="sort"    />
    </resultMap>

    <sql id="selectPsyGaugeQuestionsOptionsVo">
        select id, gauge_questions_id, name, value, img_url, type,sort from psy_gauge_questions_options
    </sql>

    <select id="selectPsyGaugeQuestionsOptionsList" parameterType="com.ruoyi.gauge.domain.PsyGaugeQuestionsOptions" resultMap="PsyGaugeQuestionsOptionsResult">
        <include refid="selectPsyGaugeQuestionsOptionsVo"/>
        <where>  
            <if test="gaugeQuestionsId != null "> and gauge_questions_id = #{gaugeQuestionsId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="value != null "> and value = #{value}</if>
            <if test="imgUrl != null  and imgUrl != ''"> and img_url = #{imgUrl}</if>
            <if test="type != null "> and type = #{type}</if>
        </where>
        order by sort
    </select>
    
    <select id="selectPsyGaugeQuestionsOptionsById" parameterType="Integer" resultMap="PsyGaugeQuestionsOptionsResult">
        <include refid="selectPsyGaugeQuestionsOptionsVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPsyGaugeQuestionsOptions" parameterType="com.ruoyi.gauge.domain.PsyGaugeQuestionsOptions" useGeneratedKeys="true" keyProperty="id">
        insert into psy_gauge_questions_options
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="gaugeQuestionsId != null">gauge_questions_id,</if>
            <if test="name != null">name,</if>
            <if test="value != null">value,</if>
            <if test="imgUrl != null">img_url,</if>
            <if test="type != null">type,</if>
            <if test="sort != null">sort,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="gaugeQuestionsId != null">#{gaugeQuestionsId},</if>
            <if test="name != null">#{name},</if>
            <if test="value != null">#{value},</if>
            <if test="imgUrl != null">#{imgUrl},</if>
            <if test="type != null">#{type},</if>
            <if test="sort != null">#{sort},</if>
         </trim>
    </insert>

    <update id="updatePsyGaugeQuestionsOptions" parameterType="com.ruoyi.gauge.domain.PsyGaugeQuestionsOptions">
        update psy_gauge_questions_options
        <trim prefix="SET" suffixOverrides=",">
            <if test="gaugeQuestionsId != null">gauge_questions_id = #{gaugeQuestionsId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="value != null">value = #{value},</if>
            <if test="imgUrl != null">img_url = #{imgUrl},</if>
            <if test="type != null">type = #{type},</if>
            <if test="sort != null">sort = #{sort},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePsyGaugeQuestionsOptionsById" parameterType="Integer">
        delete from psy_gauge_questions_options where id = #{id}
    </delete>

    <delete id="deletePsyGaugeQuestionsOptionsByIds" parameterType="String">
        delete from psy_gauge_questions_options where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="queryOptionsByIds" resultType="com.ruoyi.gauge.domain.PsyGaugeQuestionsOptions" parameterType="arraylist">
        select id, value from psy_gauge_questions_options
            where id in
        <foreach item="item" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>