<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renxin.psychology.mapper.PsyConsultColumnMapper">

    <sql id="selectPsyConsultColumnVo">
        select id, consult_id, consult_name, title, info, cat, sort, img, url, status, create_by, create_time, update_by, update_time from psy_consult_column
    </sql>

    <select id="getOne" resultType="com.renxin.psychology.vo.PsyConsultColumnVO">
        <include refid="selectPsyConsultColumnVo"/>
        where id = #{id}
    </select>

    <select id="getList" resultType="com.renxin.psychology.vo.PsyConsultColumnVO">
        <include refid="selectPsyConsultColumnVo"/>
        <where>
            <if test="startTime != null "> and create_time <![CDATA[ >= ]]> #{startTime}</if>
            <if test="endTime != null "> and create_time <![CDATA[ <= ]]> #{endTime}</if>
            <if test="consultId != null "> and consult_id = #{consultId}</if>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="cat != null  and cat != ''"> and cat = #{cat}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <delete id="deleteById" parameterType="Long">
        delete from psy_consult_column where id = #{id}
    </delete>

    <delete id="deleteByIds" parameterType="String">
        delete from psy_consult_column where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>