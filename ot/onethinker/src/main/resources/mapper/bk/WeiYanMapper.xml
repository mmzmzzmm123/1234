<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onethinker.bk.mapper.WeiYanMapper">

    <resultMap type="WeiYan" id="WeiYanResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="likeCount" column="like_count"/>
        <result property="content" column="content"/>
        <result property="type" column="type"/>
        <result property="source" column="source"/>
        <result property="isPublic" column="is_public"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectWeiYanVo">
        select id,
               user_id,
               like_count,
               content,
               type,
               source,
               is_public,
               create_time
        from bk_wei_yan
    </sql>

    <select id="selectWeiYanList" parameterType="WeiYan" resultMap="WeiYanResult">
        <include refid="selectWeiYanVo"/>
        <where>
            <if test="userId != null ">
                and user_id = #{userId}
            </if>
            <if test="likeCount != null ">
                and like_count = #{likeCount}
            </if>
            <if test="content != null  and content != ''">
                and content = #{content}
            </if>
            <if test="type != null  and type != ''">
                and type = #{type}
            </if>
            <if test="source != null ">
                and source = #{source}
            </if>
            <if test="isPublic != null ">
                and is_public = #{isPublic}
            </if>
        </where>
    </select>

    <select id="selectWeiYanById" parameterType="Long"
            resultMap="WeiYanResult">
        <include refid="selectWeiYanVo"/>
        where id = #{id}
    </select>

    <insert id="insertWeiYan" parameterType="WeiYan" useGeneratedKeys="true"
            keyProperty="id">
        insert into bk_wei_yan
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,
            </if>
            <if test="likeCount != null">like_count,
            </if>
            <if test="content != null and content != ''">content,
            </if>
            <if test="type != null and type != ''">type,
            </if>
            <if test="source != null">source,
            </if>
            <if test="isPublic != null">is_public,
            </if>
            <if test="createTime != null">create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},
            </if>
            <if test="likeCount != null">#{likeCount},
            </if>
            <if test="content != null and content != ''">#{content},
            </if>
            <if test="type != null and type != ''">#{type},
            </if>
            <if test="source != null">#{source},
            </if>
            <if test="isPublic != null">#{isPublic},
            </if>
            <if test="createTime != null">#{createTime},
            </if>
        </trim>
    </insert>

    <update id="updateWeiYan" parameterType="WeiYan">
        update bk_wei_yan
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id =
                #{userId},
            </if>
            <if test="likeCount != null">like_count =
                #{likeCount},
            </if>
            <if test="content != null and content != ''">content =
                #{content},
            </if>
            <if test="type != null and type != ''">type =
                #{type},
            </if>
            <if test="source != null">source =
                #{source},
            </if>
            <if test="isPublic != null">is_public =
                #{isPublic},
            </if>
            <if test="createTime != null">create_time =
                #{createTime},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteWeiYanById" parameterType="Long">
        delete
        from bk_wei_yan
        where id = #{id}
    </delete>

    <delete id="deleteWeiYanByIds" parameterType="String">
        delete from bk_wei_yan where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
